// CODE
chapter
	code
		display: inline-block
		box-sizing: border-box
		padding: 0.1em 0
		border-radius: 3px
		font-family: Consolas, 'Liberation Mono', Menlo, Courier, monospace
		font-size: 85%
		background-color: #f2f2f2
		white-space: pre-wrap
		&:before, &:after
			letter-spacing: -0.2em
			content: '\00a0'
	pre > code
		display: block
		max-width: 100%
		padding: 12px 15px
		border-radius: 5px
		&:before, &:after
			content: none

