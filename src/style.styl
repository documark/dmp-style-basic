@import 'reset.css'

header-color = #000
text-color = #333
//link-color = #1486b3

// GLOBAL
option
	display: none

body
	color: text-color
	font-family: Arial, sans-serif
	font-size: 12px
	line-height: 125%

h1
	margin: 40px 0 20px
	color: header-color 
	font-size: 23px
h2
	margin: 30px 0 20px
	color: header-color
	font-size: 18px
h3
	margin: 20px 0 0
	color: header-color
	font-size: 14px
	font-weight: bold

h4, h5
	margin-bottom: 0
	font-style: italic
	font-weight: normal

p
	margin: 0 0 20px

img
	max-width: 100%

.pull-left
	float: left
.pull-right
	float: right

strong, .bold
	font-weight: bold
i, em, .italic
	font-style: italic
u, .underline
	text-decoration: underline

.text-center
	text-align: center

.page-break
	page-break-before: always

.clearfix:after
	content: ""
	display: table
	clear: both

// HEADER / FOOTER
#meta
	#wrapper
		height: 50px
	header, footer
		display: block
		width: 100%
	footer
		position: absolute
		bottom: 0

// COVER
cover
	position: relative
	display: block
	height: 62.42em // TODO(mauvm): Find proper fix
	h1
		margin: 0
		font-size: 50px
		padding: 100px 0
	h2
		margin: 40px 0
		font-size: 30px
		color: text-color
	h3
		font-size: 14px
	h1, h2, h3
		text-align: right
	.footer
		position: absolute
		bottom: 0
		p
			span
				display: inline-block
				width: 100px
			&:last-child
				margin-bottom: 0

// TABLE OF CONTENTS
chapter table-of-contents
	ul
		margin: 0
		list-style-type: none
		li
			padding: 0
			span.chapter-title
				display: inline-block
				padding: 0 0 6px
			span.page-number
				float: right
	ul.index-1 > li
		padding: 0 0 18px
		page-break-inside: avoid
		> a.chapter-link
			font-weight: bold
	ul.index-3
		font-style: italic

// CHAPTER
chapter
	display: block
	page-break-before: always

// MISCELLANEOUS
chapter
	> h1
		padding: 80px 0 20px

// LINK
chapter a
	&, &:link, &:active, &:hover, &:visited
		color: text-color
		text-decoration: none

// LIST
chapter ul, chapter ol
	margin: 20px 0 20px 30px
	li
		padding-bottom: 10px
		p
			margin: 0 0 10px
		&:last-child
			padding-bottom: 0
chapter ul
	list-style: disc
chapter ol
	list-style: decimal

// TABLE
chapter table
	display: table
	width: 100%
	max-width: 100%
	margin: 20px 0
	border-spacing: 0
	border: 1px solid #ddd !important
	th
		text-align: left
		font-weight: bold
	thead th
		vertical-align: bottom
		border-bottom: 1px solid #ddd !important
		white-space: nowrap
	th, td
		padding: 8px !important
		vertical-align: top
	td
		border-top: 1px solid #ddd !important
	tbody tr:nth-child(odd)
		background-color: #f9f9f9
	tbody
		td:nth-child(1):nth-last-child(2)
			width: 33%
	&.table-condensed
		font-size: 90%
		th, td
			padding: 4px 6px !important

